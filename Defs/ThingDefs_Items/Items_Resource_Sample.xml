            <texPath>Things/Item/Sample/MetalhorrorEntitySample</texPath>
            <graphicClass>Graphic_StackCount</graphicClass>
        </graphicData>
        <statBases>
            <MarketValue>30</MarketValue>
        </statBases>
    </ThingDef>

