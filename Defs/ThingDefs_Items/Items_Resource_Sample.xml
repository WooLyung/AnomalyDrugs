<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingCategoryDef>
        <defName>EntitySamples</defName>
        <label>entity samples</label>
        <description>Samples extracted from entity.</description>
        <parent>ResourcesRaw</parent>
    </ThingCategoryDef>

    <ThingDef Name="EntitySample" ParentName="ResourceBase" Abstract="True">
        <stackLimit>10</stackLimit>
        <statBases>
            <Mass>0.1</Mass>
            <MaxHitPoints>10</MaxHitPoints>
            <Flammability>1.4</Flammability>
        </statBases>
        <thingCategories>
            <li>EntitySamples</li>
        </thingCategories>
        <genericMarketSellable>false</genericMarketSellable>
        <tickerType>Normal</tickerType>
        <comps>
            <li Class="CompProperties_Explosive">
                <explosiveRadius>1.5</explosiveRadius>
                <explosiveDamageType>Flame</explosiveDamageType>
            </li>
        </comps>
    </ThingDef>

    <ThingDef ParentName="EntitySample">
        <defName>MetalhorrorEntitySample</defName>
        <label>metalhorror entity sample</label>
        <description>Samples extracted from Metalhorror.</description>
